---
export type SectionItem = {
  heading1: string;
  heading2: string;
  url: string;
  description?: string;
  tags?: string[];
};
interface Props {
  title: string;
  items: SectionItem[];
}
const { title, items } = Astro.props;
---

<section class="flex w-full flex-col gap-3">
  <h2 class="text-2xl font-bold">{title.toUpperCase()}</h2>
  {
    items.map((i) => (
      <div v-for="item in props.items" class="grid">
        <h4 class="text-secondary">{i.heading1}</h4>
        <div class="col-span-2">
          <h4>
            <a href={i.url} target="_blank">
              {i.heading2} â†’
            </a>
          </h4>
          <div class="flex gap-2">
            {i.tags?.map((t) => (
              <span class="bg-primary rounded-full px-2 text-white">{t}</span>
            ))}
          </div>
          <p class="text-secondary">{i.description}</p>
        </div>
      </div>
    ))
  }
</section>
